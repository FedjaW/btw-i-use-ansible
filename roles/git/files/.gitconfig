[user]
    name = Firstname Lastname
    email = example@mail.de

[credential "https://dev.azure.com"]
    helper = store --file ~/dev/work/credentials

[credential "https://bas-common.<arbeitgeber>.de"]
    helper = store --file ~/dev/work/lfs-credentials

[color "branch"]
	current = yellow bold
	local = green bold
	remote = cyan bold
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
[color "status"]
	added = green bold
	changed = yellow bold
	untracked = red bold